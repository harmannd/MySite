<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Web Apps</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-background navbar-fixed-top">
        <div class="container">
            <div class="row">
                <div class="navbar-brand col-md-6" id="homelogo">
                    @Html.ActionLink("Derek Harmann", "Index", new { controller = "Home", action = "Index" })
                    <p>Entry Level Developer</p>
                </div>
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="col-md-6">
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav side-navbar">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Web Apps <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Rolodex", "Index", "Contacts")</li>
                                </ul>
                            </li>
                            <li>@Html.ActionLink("Resume", "Resume", "Home")</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <div class="row">
            <hr />
            <h3>Contact Info</h3>
            <address>
                <strong>Name:</strong> Derek Harmann <br />
                <strong>Location:</strong> Green Bay, WI <br />
                <strong>Cellphone:</strong> 920-676-1669 <br />
                <strong>E-mail:</strong> derekhar2468@gmail.com <br />
                <div class="socialicons">
                    <a href="https://github.com/harmannd"><i class="fa fa-github fa-2x"></i></a>
                    <a href="https://www.linkedin.com/in/derek-harmann-3b8731129/"><i class="fa fa-linkedin fa-2x"></i></a>
                </div>
            </address>
        </div>
        <hr />
        <footer>
            <div class="row">
                <p>&copy; @DateTime.Now.Year - <strong>Derek Harmann</strong> - My Web Apps</p>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
